---
interface Props {}

const {} = Astro.props;

const pages = [
    { name: "Home", href: "/" },
    { name: "Video", href: "/Video" },
    { name: "Social Media", href: "/SocialMedia" },
    { name: "Editorial", href: "/Editorial" },
];
---

<header class="py-8 px-20 inline-flex justify-between mx-auto w-full">
    <h2 class="">Furious Mushroom</h2>
    <nav class="flex flew-row gap-x-8">
        {
            pages.map(({ name, href }, key) => (
                <>
                    <a class={"nav-link"} href={href}>
                        {name}
                    </a>
                </>
            ))
        }
    </nav>
</header>

<style>
    .nav-link {
        text-decoration: none;
        position: relative;
        padding-bottom: 2px;
        padding-top: 10px;
    }

    .nav-link::after {
        content: "";
        display: block;
        height: 2px;
        left: 50%;
        position: absolute;
        background: black;
        opacity: 80;
        transition:
            width 0.3s ease 0s,
            left 0.3s ease 0s;
        width: 0;
    }
    a:hover:after {
        width: 100%;
        left: 0%;
    }
</style>

