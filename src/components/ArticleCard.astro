---
import { Image } from "astro:assets";
import myImage from "../assets/cover.jpg";

interface Props {
	title: string;
	body: string;
	href: string;
	image: string;
}

const { href, title, body, image } = Astro.props;
---


<a href={href} target="_blank" class="mb-8 border-2 max-w-96 border-black rounded-md mx-12">
	<h3 class="text-right px-6 py-2">{title}</h3>
	<Image 
		class="object-fill"
		src={myImage} 
		alt="" 
		decoding="async"
  		loading="lazy"
	/>
	<p class="p-1">{body}</p>
</a>
